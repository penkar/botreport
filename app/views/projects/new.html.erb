Create a new Report:
<div class='form'>
	<%= form_for @project, url: {action: 'create'} do |f| %>
		<br>Report Name:
		<br>
		<%= f.text_field :name %>
		<br>Description:
		<br>
		<%= f.text_area :description %>
		<br>
		<%= f.file_field :file %>
		<%= submit_tag "Create New Report" %>
	<% end %>
</div>
<br>
